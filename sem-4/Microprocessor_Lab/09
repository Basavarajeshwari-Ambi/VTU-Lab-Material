 DATA SEGMENT
 PORTA EQU 0E880H
 PORTC EQU 0E882H
 CR EQU 0E883H
 FIRE DB 79H,50H,06H,71H,0,0
 HELP DB 73H,38H,79H,76H,0,0
 DATA ENDS
 ASSUME CS:CODE, DS:DATA
 CODE SEGMENT
 START: MOV AX,DATA
 MOV DS,AX
 MOV AL,80H
 MOV DX,CR
 OUT DX,AL
 RDISP:MOV DI,50
 FIRE1:MOV SI,OFFSET FIRE
 CALL DISPLAY
 DEC DI
 JNZ FIRE1
 MOV DI,50
 HELP1:MOV SI,OFFSET HELP
 CALL DISPLAY
 DEC DI
 JNZ HELP1
 MOV AH,01H
 INT 16H
 JZ RDISP
 MOV AH,4CH
 INT 21H
 DISPLAY:MOV CX,06H
 MOV BL,00H
 ADISP:MOV AL,BL
 MOV DX,PORTC
 OUT DX,AL
 MOV DX,PORTA
 LODSB
 OUT DX,AL
 CALL DELAY
 INC BL
CMP BL,05H 
JLE EDISP
 MOV BL,00H
 EDISP:LOOP ADISP
 RET
 DELAY:PUSH BX
 PUSH CX
 MOV BX, 0FFH
 L1:MOV CX, 0FFFH
 L2:LOOP L2
 DEC BX
 JNZ L1
 POP CX
 POP BX
 RET
 CODE ENDS
 END START
