 CODE SEGMENT
 START: MOV AX,DATA
 MOV DS,AX
 MOV AL,80H
 MOV DX,CR
 OUT DX,AL
 LEA DX,MSG
 MOV AH,09H
 INT 21H
 AGAIN:MOV CX,28H
 LEA SI,TABLE
 BACK:MOV AL,[SI]
 MOV DX,PORTA
 OUT DX,AL
 CALL DELAY
 INC SI
 LOOP BACK
 MOV AH, 01H
 INT 16H
 JZ AGAIN
 MOV AH,4CH
 INT 21H
 DELAY PROC
 MOV BX,0FFFFH
 L1:DEC BX
 JNZ L1
 RET
 DELAY ENDP
 CODE ENDS
 END START
