PRINT MACRO NUM 
MOV AL,NUM 
 AAM  
MOV BX,AX 
 ADD BX,3030H 
 MOV DL,BH
 MOV AH,02H
 INT 21H
 MOV DL,BL 
 MOV AH,02H 
 INT 21H
 ENDM
 COLON MACRO 
 MOV DL,':' 
 MOV AH,02H 
 INT 21H
 ENDM
 SLASH MACRO 
 MOV DL,'/' 
 MOV AH,02H 
 INT 21H
 ENDM
 DISPLAY MACRO MSG 
 LEA DX,MSG
 MOV AH,09H 
 INT 21H
 ENDM
 DATA SEGMENT
 MSG1 DB 'SYSTEM TIME IS $'
 MSG2 DB 10,13, 'SYSTEM DATE IS $' 
 DATA ENDS
 ASSUME CS:CODE,DS:DATA
 CODE SEGMENT
 START: MOV AX,DATA 
 MOV DS,AX
 DISPLAY MSG1
 MOV AH,2CH 
INT 21H 
 PRINT CH 
 COLON
 PRINT CL 
 DISPLAY MSG2 
 MOV AH,2AH 
 INT 21H 
 PRINT DL 
 SLASH 
 PRINT DH 
 SLASH 
 ADD CX,0F830H 
 PRINT CL 
 MOV AH,4CH 
 INT 21H
 CODE ENDS
 END START
