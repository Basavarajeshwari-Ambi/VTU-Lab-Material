#include<stdio.h>
int main()
{
	int i,n,a[100],low,mid,high,key,flag=0;
	printf("Enter the value for n \n");
	scanf("%d",&n);
	printf("Enter the n no of elements\n");
	for(i=0;i<n;i++)
		scanf("%d",&a[i]);
	printf("Enter the key\n");
	scanf("%d",&key);
	low=0;
	high=n-1;
	while(low<=high)
	{
		mid=(low+high)/2;
		if(key==a[mid])
		{
			flag=1;
			break;			
		}
		else if(key<a[mid])
			high=mid-1;
		else
			low=mid+1;
	}
	if(flag=1)
		printf("key found at the position %d",mid+1);
	else
		printf("key not found");
return 0;
}
